# Common Shortcuts
alias ll='ls -la --color=auto'
alias ..='cd ..'
alias ...='cd ../..'
alias grep='grep --color=auto'

# Docker shortcut aliases
alias d='docker'
alias dps='docker ps'
alias dpsa='docker ps -a'
alias di='docker images'
alias dimg='docker image ls'
alias drm='docker rm'
alias drmi='docker rmi'
alias dst='docker start'
alias dsp='docker stop'
alias dlog='docker logs'
alias dexec='docker exec -it'
alias dbuild='docker build . -t'
alias dup='docker compose up -d'
alias ddown='docker compose down'

#git shortcuts:
# Push to current branch
alias gpu='git push'
# Push all branches
alias gpa='git push --all'

# 🔁 Rename a file (interactive)
alias ren='mv -i'

# 🗑️ Safer delete - use trash function
alias del='trash'

# 🛑 Force delete (with confirmation)
alias del!='rm -i'


# Fuzzy Finder Aliases
alias hist='history | fzf'
alias cdf='cd $(find . -type d | fzf)'
alias cz='cd $(zoxide query -l | fzf)'

#alias opena='gtk-launch "$(ls /usr/share/applications | sed 's/\.desktop$//' | fzf)"'


# Quick Edit & Reload
alias edp='nano ~/dotfiles/zsh/.zshrc'
alias src='source ~/.zshrc'
